    <tr class="header1">
      <th>Customer Name</th>
      <th>Email</th>
      <th>Credits</th>
      <th></th>
    </tr>
    <% for(let current of users){ %> <% if(!user._id.equals(current._id)){ %>
    <tr class="header2">
      <td><%= current.name %></td>
